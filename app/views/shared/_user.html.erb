
<div class="container my-3 d-flex bg-dark text-light rounded-3 position-relative">
    <div class="m-2">
        <img class='rounded'src= <%= user.photo %> alt="profile image"/>
    </div>
    <div class="container d-flex justify-content-around align-items-center">
        <div>
            <h3 class="link"><%=user.name %></h3>
        </div>
        <div class='d-flex flex-column float-right'>
            <%if current_user == user %>
                <%= link_to "New post", new_post_path(user.id), class:'btn btn-light link'%>
            <%end%>
            <p>Number of posts: <%=user.posts_count %></p>
        </div>
    </div>
</div>